#!/usr/bin/python

import argparse
import urllib2
import json
import commands
import subprocess
import paramiko.agent
import base64
import hashlib
import os.path
import sys
import getpass

home = os.path.expanduser("~")

def getCmdFromArgs(args):
  return { 'cl-command': args.__command
         , 'cl-options': [[k.replace('_', '-'), v] for k, v in vars(args).items() if k != '__command' and v is not None]
         }

def getCmdString(cmd):
  return cmd['cl-command'] + ''.join(sorted([k + str(v) for k, v in cmd['cl-options']]))

def listHasOption(options, option):
  for v in options:
    if v['name'] == option:
      return True

  return False

def cmdHasOption(cmd, option):
  for k, v in cmd['cl-options']:
    if k == option:
      return True

  return False

def cmdSetOption(cmd, option, value):
  option_exists = False
  for k, v in cmd['cl-options']:
    if k == option:
      option_exists = True

  if option_exists:
    cmd['cl-options'] = [[k, value] if k == option else [k, v] for k, v in cmd['cl-options']]
  else:
    cmd['cl-options'] = cmd['cl-options'] + [[option, value]]

def getSignedCmd(cmd):
  cmdString = getCmdString(cmd)
  cmdHash = hashlib.sha1(cmdString).hexdigest()
  response = urllib2.urlopen('http://localhost:8000/dh', json.dumps({ 'req-hash': cmdHash }))

  svRandBlob = json.load(response)['response']
  svRand = base64.b64decode(svRandBlob)

  agent = paramiko.Agent()
  keys = agent.get_keys()

  if len(keys) < 1:
    subprocess.call('ssh-add')
    agent = paramiko.Agent()
    keys = agent.get_keys()

  pubkeySha1 = ''

  with open(home + '/.ssh/id_rsa.pub', 'r') as content_file:
    pubkey = content_file.read()
    pubkeySha1 = hashlib.sha1(pubkey).hexdigest()

  sig = base64.b64encode(keys[0].sign_ssh_data(svRand + cmdString))

  sigCmd = dict(cmd)
  sigCmd['cl-sig'] = [pubkeySha1, sig]
  return sigCmd

def _promptOption(prompt_type, prefix, option):
  value = ''

  if prompt_type == 'prompt':
    value = raw_input(prefix + option + ': ')
  else:
    if prompt_type == 'invisible':
      value = getpass.getpass(prefix + option + ': ')

  return value

def promptOption(prompt, option):
  prompt_type, repeat = prompt

  value = _promptOption(prompt_type, 'Enter ', option)

  if repeat:
    value2 = _promptOption(prompt_type, 'Repeat ', option)

    if value != value2:
      print 'Entered values do not match'
      sys.exit(0)

  return value

# Get supported commands
response = urllib2.urlopen('http://localhost:8000/info')
data = json.load(response)

commands = data['response']

# Parser configuration
parser = argparse.ArgumentParser(description='User configuration utility')

subparsers = parser.add_subparsers(title='commands', dest='__command', help='-h gives command help')

for _, command in commands:
  subparser = subparsers.add_parser(command['name'], help='Help for command')

  if 'options' in command:
    for option in command['options']:
      if not 'prompt' in option:
        if option['name'] == 'ssh-key':
          subparser.add_argument('--' + option['name'], help=option['description'], action='store_true')
        else:
          subparser.add_argument('--' + option['name'], help=option['description'])

try:
  args = parser.parse_args()

  cmd = getCmdFromArgs(args)
  cmdInfo = dict(commands)[args.__command]
  cmdOptions = cmdInfo['options']

  if listHasOption(cmdOptions, 'password') and not cmdHasOption(cmd, 'password'):
    cmd = getSignedCmd(cmd)

  if listHasOption(cmdOptions, 'ssh-key') and cmdHasOption(cmd, 'ssh-key'):
    with open(home + '/.ssh/id_rsa.pub', 'r') as content_file:
      cmdSetOption(cmd, 'ssh-key', content_file.read())

  for option in cmdOptions:
    if 'prompt' in option:
      cmdSetOption(cmd, option['name'], promptOption(option['prompt'], option['name']))

  print cmd

  if 'confirm' in cmdInfo:
    answer = raw_input('Do you really want to do that? [Y/n]: ')

    if answer != 'Y':
      sys.exit(0)

  response = urllib2.urlopen('http://localhost:8000/command', json.dumps(cmd))

  print json.load(response)
except argparse.ArgumentError, exc:
    print exc.message, '\n', exc.argument
