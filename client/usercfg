#!/usr/bin/python

import argparse
import urllib2
import json
import DiffieHellman
import commands
import subprocess
import paramiko.agent
import base64
import hashlib
import os.path

home = os.path.expanduser("~")

dh = DiffieHellman.DiffieHellman()

response = urllib2.urlopen('http://localhost:8000/dh', json.dumps({ 'cl-pub': dh.publicKey, 'req-user': 'phil' }))
svPublicKey = json.load(response)['sv-pub']

shared = dh.genSecret(dh.privateKey, svPublicKey)

agent = paramiko.Agent()
keys = agent.get_keys()

if len(keys) < 1:
  subprocess.call('ssh-add')
  agent = paramiko.Agent()
  keys = agent.get_keys()

pubkeySha1 = ''

with open(home + '/.ssh/id_rsa.pub', 'r') as content_file:
  pubkey = content_file.read()
  pubkeySha1 = hashlib.sha1(pubkey).hexdigest()

  print(pubkeySha1)

sig = base64.b64encode(keys[0].sign_ssh_data(str(shared)))

response = urllib2.urlopen('http://localhost:8000/sign', json.dumps({ 'cl-sig' : sig, 'cl-sgn-user': 'phil', 'cl-key-hash' : pubkeySha1 }))
svSignResponse = json.load(response)

print(svSignResponse)

